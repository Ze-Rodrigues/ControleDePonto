<body>

<div class="container">
    <h1>Controle de Ponto</h1>
    <div class="form-group">
        <label for="studentName">Nome do Aluno:</label>
        <input type="text" id="studentName" placeholder="Digite o nome do aluno">
    </div>
    <div class="form-group">
        <label for="className">Turma:</label>
        <input type="text" id="className" placeholder="Digite a turma">
    </div>
    <button onclick="recordAttendance()">Registrar Presença</button>
    <button id="viewRecordsBtn" onclick="openRecordsWindow()">Ver Registros</button>
</div>

<script>
    let recordsWindow = null;

    function openRecordsWindow() {
        recordsWindow = window.open('registros.html', 'RecordsWindow', 
            'width=800,height=600,resizable=yes,scrollbars=yes');
    }

    function recordAttendance() {
        const studentName = document.getElementById('studentName').value;
        const className = document.getElementById('className').value;

        if (studentName && className) {
            const now = new Date();
            const record = {
                name: studentName,
                className: className,
                date: formatDate(now),
                time: formatTime(now)
            };

            const records = JSON.parse(localStorage.getItem('attendanceRecords')) || [];
            records.push(record);
            localStorage.setItem('attendanceRecords', JSON.stringify(records));

            // Atualiza a janela de registros se estiver aberta
            if (recordsWindow && !recordsWindow.closed) {
                recordsWindow.loadAttendanceRecords();
            }

            // Limpar os campos após o registro
            document.getElementById('studentName').value = '';
            document.getElementById('className').value = '';
            
            alert('Presença registrada com sucesso!');
        } else {
            alert('Por favor, preencha todos os campos.');
        }
    }

    function formatDate(date) {
        const dia = date.getDate().toString().padStart(2, '0');
        const mes = (date.getMonth() + 1).toString().padStart(2, '0');
        const ano = date.getFullYear();
        return `${dia}/${mes}/${ano}`;
    }

    function formatTime(date) {
        const hora = date.getHours().toString().padStart(2, '0');
        const minutos = date.getMinutes().toString().padStart(2, '0');
        return `${hora}:${minutos}`;
    }
</script>

</body>
